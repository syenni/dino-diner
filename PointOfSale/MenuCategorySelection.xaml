<Page x:Class="PointOfSale.MenuCategorySelection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PointOfSale"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MenuCategorySelection">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Click="SelectCombo" Margin="10,10,5,5" Grid.Row="0" Grid.Column="0">Combos</Button>
        <Button Click="SelectEntrees" Margin="5,10,10,5" Grid.Row="0" Grid.Column="1">Entrees</Button>
        <Button Click="SelectDrinks" Margin="10,5,5,10" Grid.Row="1" Grid.Column="0">Drinks</Button>
        <Button Click="SelectSides" Margin="5,5,10,10" Grid.Row="1" Grid.Column="1">Sides</Button>
    </Grid>
</Page>
